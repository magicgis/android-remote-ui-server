<?xml version="1.0" encoding="UTF-8"?>

<component id="comp1" width="220" height="100" posx="0" posy="0">
    
    <action-area id="area1" width="150" height="30" posx="0" posy="0" color="#ff0000">
        <!--vzhled action area ve vychozim stavu-->
        <style type="default">
            <!--pozadi-->
            <background color="#ff0000">
                
            </background>
            <!--hrana-->
            <border style="border|border_dashed|solid|user" color="#00ff00">
                
            </border>
            <!--obsahova cast-->
            <content>
                <!--popisek-->
                <text value="Button text2" posx="10" posy="5" color="#ffffff">
                    <font name="Arial" style="bold" size="18"/>
                </text>
                <!--nejaky user-defined tvar-->
                <shape type="circle|rectangle|polygon" posx="5" posy="5" width="10" height="10">
                    <background style="border|border_dashed|solid|user" color="#00ff00">
                
                    </background>
                </shape>
            </content>
        </style>
        <!--        vzhled action area v momente stisknuti-->
        <style type="onClick">
            <event type="onClick" action="ACTION_DOWN">
                
            </event>
            
        </style>
        <!--        vzhled action area po stisknuti-->
        <style type="offClick">
            <event type="onClick" action="ACTION_UP">
                
            </event>
            
        </style>
        
    </action-area>
    
</component>